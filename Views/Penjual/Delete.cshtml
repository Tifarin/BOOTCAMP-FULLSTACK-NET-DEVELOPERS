@model PALUGADA.Datas.Entities.Penjual


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Hapus Data Penjual !</h2>
    </div>

    <form method="post" asp-action="DeleteBr">
        <input asp-for="IdPenjual" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="KodeToko">Kode Toko</label>
                <input type="text" class="form-control mb-3" asp-for="KodeToko" disabled>
                <span asp-validation-for="KodeToko" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NamaToko">Nama Toko</label>
                <input type="text" class="form-control mb-3" asp-for="NamaToko" disabled>
                <span asp-validation-for="NamaToko" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AlamatToko">Alamat Toko</label>
                <input type="text" class="form-control mb-3" asp-for="AlamatToko" disabled>
                <span asp-validation-for="AlamatToko" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="IdUser">Id User</label>
                <input type="text" class="form-control mb-3" asp-for="IdUser" disabled>
                <span asp-validation-for="IdUser" class=" alert-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Delete</button>
        <a asp-controller="Penjual" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}